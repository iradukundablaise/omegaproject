<%- include('../partials/header'); %>

<div class="row">
    <div class="col col-md-12">
        <h3>Schedule a new bus</h3>
        <hr>
    </div>

    <div class="col col-md-12 col-lg-6">
        <form action="/admin/buses/<%= bus.objectId %> " method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="from">From: </label>
                <select id="from" name="from" class="form-control" disabled>
                    <option <% if(bus.to == "kigali") {%> selected="" <%}%> value="kigali">Kigali</option>
                    <option <% if(bus.to == "rusizi") {%> selected="" <%}%> value="rusizi">Rusizi</option>
                </select>
            </div>

            <div class="form-group">
                <label for="to">To: </label>
                <select id="to" name="to" class="form-control" disabled>
                    <option <% if(bus.from == "kigali") {%> selected="" <%}%> value="kigali">Kigali</option>
                    <option <% if(bus.from == "rusizi") {%> selected="" <%}%> value="rusizi">Rusizi</option>
                </select>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" name="date" id="date" class="form-control" value="<%= bus.date %>" required>
            </div>

            <div class="form-group">
                <label for="time">Time</label>
                <input type="text" name="time" id="time" class="form-control" value="<%= bus.time %>" required>
            </div>
            <button type="submit" class="btn btn-success btn-lg">Save</button>
        </form>
    </div>

    <div class="col col-md-12 col-lg-6">
        <form action="/admin/buses/<%= bus.objectId %> " method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

<%- include('../partials/footer'); %>